<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/favoriteCharactersFragment"
        android:name="com.example.swapi.FavoriteCharactersFragment"
        android:label="favorite_characters_fragment"
        tools:layout="@layout/favorite_characters_fragment" >
        <action
            android:id="@+id/action_favoriteCharactersFragment_to_characterDescriptionFragment"
            app:destination="@id/characterDescriptionFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.swapi.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/search_fragment" >
        <action
            android:id="@+id/action_searchFragment_to_characterDescriptionFragment2"
            app:destination="@id/characterDescriptionFragment" />
    </fragment>
    <fragment
        android:id="@+id/characterDescriptionFragment"
        android:name="com.example.swapi.CharacterDescriptionFragment"
        android:label="character_description_fragment"
        tools:layout="@layout/character_description_fragment" >
        <action
            android:id="@+id/action_characterDescriptionFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_characterDescriptionFragment_to_favoriteCharactersFragment"
            app:destination="@id/favoriteCharactersFragment" />
        <argument
            android:name="position"
            app:argType="integer" />
        <argument
            android:name="way_search_or_favorite"
            app:argType="string" />
    </fragment>
</navigation>